#!/bin/sh
# nocolor
# Created: Thu Oct 16 23:25:17 +08 2025
set -e

me=$(basename $0)

usage() {
	echo "usage: $me [-h] ...
  Options:
    -h
	Help"
}

foo=
while getopts hf: opt
do
	case "$opt" in
		f) foo=$OPTARG;;
		h) usage; exit ;;
		\?) echo Unknown option ; exit;;
	esac
done
shift $(($OPTIND -1))

sed -r 's/\x1B\[[0-9;]*[mK]//g'
