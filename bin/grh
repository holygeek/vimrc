#!/bin/sh
# gdu
# Created: Fri Jan  6 09:47:58 MYT 2017

me=$(basename $0)

usage() {
	printf "SYNOPSIS
	$me [-h]

DESCRIPTION
	git reset --hard with @{u}

OPTIONS
    -h
	Show this help message
"
}

while getopts h opt
do
	case "$opt" in
		# $OPTARG with o:
		h)
			usage
			exit
			;;
		\?)
			echo "$me: Unknown option '$opt'"
			exit 1
			;;
	esac
done
shift $(($OPTIND - 1))

if [ -z "$1" ]; then
	usage
	exit 1
fi

if [ -z "$branch_prefix" ]; then
	echo >&2 "\$branch_prefix is not set"
	exit 1
fi

curr_branch=$(git symbolic-ref --short HEAD)
if [ -z "$curr_branch" ]; then
	echo >&2 "can't get current branch name"
	exit 1
fi

. $(dirname $0)/git-branch.rc

cmd=
branch=
for i in $*; do
	branch=`branch_for $i`
	cmd="git checkout $branch && git $no_reflog reset --hard @{u}"
	eval "$cmd"
done
git checkout $curr_branch
