#!/bin/sh
# vim
# Created: Fri Jan 20 07:31:51 MYT 2017
bin=$(basename $0)
if [ "$bin" = 'vi' ]; then
	bin=vim
fi

realvi="/usr/local/bin/$bin"

run_vi_normally() {
	LD_LIBRARY_PATH= $realvi "$@"
}

open_with_line_number() {
	arg=${1?need arg}
	arg=$(echo $arg|sed -e 's/:/ +/' -e 's/:.*//')
	cmd="$realvi $arg"
	echo "$cmd"
	eval "$cmd"
}

test -n "$GOROOT" && PATH=$GOROOT/bin:$PATH

if [ $# -eq 1 ]; then
	case "$1" in
		*[0-9][0-9]:[0-9][0-9]:[0-9][0-9]*)
			#run_vi_normally $*
			open_with_line_number $1
			;;
		*:[0-9]|*:[0-9]*)
			open_with_line_number $1
			;;
		*)
			run_vi_normally "$@"
			;;
	esac
else
	run_vi_normally "$@"
fi
