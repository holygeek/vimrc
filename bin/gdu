#!/bin/sh
# gdu
# Created: Wed Dec 21 07:26:55 MYT 2016

me=$(basename $0)

usage() {
	printf "SYNOPSIS
	$me [-h]

DESCRIPTION
	git diff with @{u}

OPTIONS
    -h
	Show this help message
    -i
	Show patch id
"
}

show_patch_id=
while getopts hi opt
do
	case "$opt" in
		# $OPTARG with o:
		h)
			usage
			exit
			;;
		i)
			show_patch_id=t
			;;
		\?)
			echo "$me: Unknown option '$opt'"
			exit 1
			;;
	esac
done
shift $(($OPTIND - 1))

if [ -z "$1" ]; then
	if [ -n "$show_patch_id" ]; then
		git diff @{u}|git patch-id
		exit $?
	else
		exec git diff @{u}..
	fi
fi

if [ -z "$branch_prefix" ]; then
	echo >&2 "\$branch_prefix is not set"
	exit 1
fi

cmd=
branch=
for i in $*; do
	case $i in
		[0-9])
			branch="${branch_prefix}$i"
			;;
		d)
			branch="develop"
			;;
		*)
			branch="$i"
			;;
	esac
	if [ -n "$show_patch_id" ]; then
		git diff origin/$branch $branch | git patch-id
	else
		echo git diff origin/$branch $branch
		git diff origin/$branch $branch
	fi
done
