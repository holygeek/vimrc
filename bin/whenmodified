#!/bin/sh
# whenmodified - Explanation goes here
# Created: Fri Dec  4 10:19:56 MYT 2009

usage() {
	echo "whenmodified [-f(forever)] -c whattodo 'cmd to get files to monitor'"
}

whattodo=
while getopts fhc: opt
do
	case "$opt" in
    f) FOREVER=1;;
    c) whattodo="$OPTARG";;
    h) usage ; exit;;
	\?) echo Unknown option ; exit;;
	esac
done
shift $(($OPTIND -1))

if [ -z "$whattodo" ]; then
    usage
    exit 1;
fi

if [ -z "$*" ]; then
    usage
    exit 1;
fi

events=modify,attrib,close_write,moved_to,moved_from,move,move_self,create,delete,delete_self

if ! which inotifywait >/dev/null; then
    echo "inotifywait not available"
    exit 1
fi

inotifycmd="inotifywait -e $events -q -q"
cmd=$*
while true; do
    echo "[PENDING] $whattodo [MODIFIED] $cmd"
    $inotifycmd $(eval $cmd) && {
        echo "$whattodo"
        eval "sleep .2; $whattodo"
    }
    if [ ! $FOREVER ]; then
	    break;
    fi
done
